<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.recognigtion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="RECOGNIGTION"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RECOGNIGTION"
        tools:targetApi="31">
        <activity
            android:name=".ConfirmationSingUp"
            android:exported="false" />
        <activity
            android:name=".ProcessingRecognize"
            android:exported="false" />
        <activity
            android:name=".ProcessingSingUpActivity"
            android:exported="false" />
        <activity
            android:name=".CreaditsActivity"
            android:exported="false" />
        <activity
            android:name=".SingUpActivity"
            android:exported="false" />
        <activity
            android:name=".ResponseActivity"
            android:exported="false" />
        <activity
            android:name=".RecognizeActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".TimerService" />
    </application>

</manifest>